{% extends '::admin.html.twig' %}

{% block body %}

<ul class="breadcrumb breadcrumb-page">
    <div class="breadcrumb-label text-light-gray">Vous êtes ici: </div>
    <li><a href="{{ path('site_admin') }}">Accueil</a></li>
    <li class="active"><a href="{{ path('site_admin_articles') }}">Articles</a></li>
</ul>
<div class="page-header">
	<h1><i class="fa fa-files-o page-header-icon"></i>&nbsp;&nbsp;Articles</h1>
</div>

<div class="panel">
	<div class="panel-heading">
		<div class="panel-body">
		   <a href="{{ path('site_admin_ajouter') }}"><button type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-plus"></span> Nouveau</button></a>
		   <button type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-search"></span> Recherche</button>
		 </div>
		<!--<span class="panel-title">Hover row tables</span>-->
	</div>
	<div class="panel-body">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Titre</th>
	                <th>contenu</th>
	                <th>Date création</th>
				</tr>
			</thead>
			{% for Articles in Articles %}
		    	<tbody>
		    		<td>{{ Articles.id }}</td>
		    		<td>{{ Articles.titre|striptags|slice(0, 30) }}</td>
		    		<td>{{ Articles.contenu|striptags|slice(0, 30) }}</td>
		    		<td>{{ Articles.date|date('d M Y') }}</td>
		    		<td>
		    			<a href="{{ path('site_admin_editer', { 'id': Articles.id }) }}"><button type="button" class="btn btn-default btn-sm">
						  <span class="fa fa-pencil fa-fw"></span> Modifier
						</button></a>
						<a href="{{ path('site_admin_supprimer', { 'id': Articles.id }) }}"><button type="button" class="btn btn-danger btn-sm">
						  <span class="glyphicon glyphicon-trash"></span> Supprimer
						</button></a>
		    		</td>
		    	</tbody> 
		    {% endfor %} 
		</table>
	</div>
</div>

{% endblock%}