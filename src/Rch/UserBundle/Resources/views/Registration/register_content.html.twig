{% extends "::admin.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
<ul class="breadcrumb breadcrumb-page">
    <div class="breadcrumb-label text-light-gray">Vous êtes ici: </div>
    <li><a href="{{ path('site_admin') }}">Accueil</a></li>
    <li><a href="{{ path('site_admin_users') }}">Utilisateurs</a></li>
    <li class="active"><a href="{{ path('site_admin_articles') }}">Ajouter utilisateur</a></li>
</ul>
<div class="page-header">
	<h1><i class="glyphicon glyphicon-plus page-header-icon"></i>&nbsp;&nbsp;Ajouter un utilisateur</h1>
</div>	
		<form class="form-horizontal" role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
		    
			<div class="form-group col-md-9">
				{{ form_label(form.username, 'Identifiant (obligatoire)') }}
				<div class="controls">
					{{ form_widget(form.username, { 'attr': {'class': 'form-control',  'placeholder': 'Saisissez votre username' } }) }}	
				</div>
			</div>
			<div class="form-group col-md-9">
				{{ form_label(form.email, 'E-mail (obligatoire)') }}
				<div class="controls">
					{{ form_widget(form.email, { 'attr': {'class': 'form-control',  'placeholder': 'Saisissez votre email' } }) }}	
				</div>
			</div>
			<div class="form-group col-md-9">
				{{ form_label(form.plainPassword['first'], 'Mot de passe (obligatoire)') }}
				<div class="controls">
					{{ form_widget(form.plainPassword['first'], { 'attr': {'class': 'form-control',  'placeholder': 'Saisissez votre mot de passe' } }) }}	
				</div>
			</div>
			<div class="form-group col-md-9">
				{{ form_label(form.plainPassword['second'], 'Répétez le mot de passe (obligatoire)') }}
				<div class="controls">
					{{ form_widget(form.plainPassword['second'], { 'attr': {'class': 'form-control',  'placeholder': 'Répétez le mot de passe' } }) }}	
				</div>
			</div>
			<div class="form-group col-md-9">
				{{ form_label(form.roles, 'Rôle',{ 'attr': {'class': 'control-label'} }) }}
				<div class="controls">
			        {{ form_widget(form.roles, { 'attr' : {'class': 'form-control'}} ) }}
			    </div>
		    </div>
		    
			<br>
		    {{ form_rest(form) }}

		    <div class="form-group col-md-9">
		        <button type="submit" class="btn btn-default">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
		    </div>
		</form>
	
{% endblock %}


