{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}


{% block body %}

<ul class="breadcrumb breadcrumb-page">
    <div class="breadcrumb-label text-light-gray">Vous êtes ici: </div>
    <li><a href="{{ path('site_admin') }}">Accueil</a></li>
    <li class="active"><a href="{{ path('site_admin_users') }}">Utilisateurs</a></li>
</ul>
<div class="page-header">
  <h1><i class="fa fa-users page-header-icon"></i>&nbsp;&nbsp;Utilisateurs</h1>
</div>



<div class="panel">
  <div class="panel-heading">
    <div class="panel-body">
       <a href="{{ path('site_admin_users_ajouter') }}"><button type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-plus"></span> Nouveau</button></a>
       <button type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-search"></span> Recherche</button>
     </div>
    <!--<span class="panel-title">Hover row tables</span>-->
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      	<thead>
      		<tr>
      		  <th>id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Status</th>
                <!--<th>Header</th>-->
      		</tr>
      	</thead>
      	{% for user in users %}
      	<tbody>
      		<td>{{ user.id }}</td>
      		<td>{{ user.username|e }}</td>
      		<td>{{ user.email }}</td>
      		<td>{{ user.enabled }}</td>
      		<td>
      			<a href="{{ path('site_admin_users_editer', { 'id': user.id }) }}"><button type="button" class="btn btn-default btn-sm">
  				  <span class="fa fa-pencil fa-fw"></span> Éditer
  				</button></a>
  				<a href="{{ path('site_admin_users_supprimer', { 'id': user.id }) }}"><button type="button" class="btn btn-danger btn-sm">
  				  <span class="glyphicon glyphicon-trash"></span> Supprimer
  				</button></a>
      		</td>
      	</tbody>
          {% endfor %}                        
      </table>
  </div>
</div>

{% endblock %}
