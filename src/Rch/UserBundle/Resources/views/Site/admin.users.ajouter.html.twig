{% extends "::admin.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
		
	<div class="page-header"><h2><span class="glyphicon glyphicon-plus"></span> Ajouter un utilisateur</h2></div>
		<form class="form-horizontal" role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
		    
		    <div class="form-group">
			    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
			    <div class="col-sm-10">
			      <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
			    </div>
			</div>
		    <div class="form-group">
		        {{ form_label(form.username, 'Identifiant (obligatoire)') }}
		    	{{ form_widget(form.username) }}
		    </div>

		    <div class="form-group">
		        {{ form_label(form.email, 'E-mail (obligatoire)') }}
		    	{{ form_widget(form.email) }}
		    </div>
		    <div class="form-group">
		        {{ form_label(form.plainPassword['first'], 'Mot de passe (obligatoire)') }}
		    	{{ form_widget(form.plainPassword['first']) }}
		    </div>
		    <div class="form-group">
		        {{ form_label(form.plainPassword['second'], 'Répétez le mot de passe (obligatoire)') }}
		    	{{ form_widget(form.plainPassword['second']) }}
		    </div>

		    <div class="controls">
		        {{ form_label(form.roles, 'Rôle',{ 'attr': {'class': 'control-label'} }) }}
		        {{ form_widget(form.roles, { 'attr' : {'class': 'form-control'}} ) }}
		    </div>
			<br>
		    {{ form_rest(form) }}

		    <div>
		        <button type="submit" class="btn btn-default">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
		    </div>
		</form>
{% endblock%}



